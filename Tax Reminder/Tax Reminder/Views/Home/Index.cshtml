@{
    ViewBag.Title = "Home Page";
}

<style type="text/css">
    .glyphicon{
    font-size: 50px;
}
</style>

<div class="space row">  
    <div class="col-md-5 col-lg-5">
        <div class="col-lg-2 col-md-2">
            <a href="#">
                <span class="glyphicon glyphicon-info-sign"></span>
            </a>
        </div>
        
        <div class="col-lg-10 col-md-10">
            <h4>AVOID A HEFTY £1,000 FINE</h4>
            <h4>TAX & MOT YOUR VEHICLE ON TIME</h4>
        </div>
        
        
        
        <div class="col-lg-12 col-md-12">
            <h4><strong>How It Works</strong></h4>
            <h5><strong>YOU:</strong></h5>
            <p>1. Tell us your vehicle make and registration</p>
            <p>2. Pay just £1.99 & sit back whilst we do the rest</p>
            
            <br />

